{
  "manifest_version": 3,
  "name": "CTS SN Quickfill",
  "version": "31.0",
  "description": "Quickly fills new ServiceNow incident tickets.",
  "permissions": [ "storage" ],
  "host_permissions": [ "*://*.service-now.com/*" ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["*://*.service-now.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}